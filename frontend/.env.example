# Frontend Environment Variables

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api/v1
NEXT_PUBLIC_SYSTEM_DOMAIN=localhost:3001
NEXT_PUBLIC_TENANT_DOMAIN_SUFFIX=.localhost:3001

# Authentication
NEXTAUTH_URL=http://localhost:3001
NEXTAUTH_SECRET=your-nextauth-secret-key-change-in-production

# Environment
NODE_ENV=development
NEXT_PUBLIC_ENV=development

# Application
NEXT_PUBLIC_APP_NAME=ZPlus SaaS Platform
NEXT_PUBLIC_APP_VERSION=1.0.0

# Features
NEXT_PUBLIC_ENABLE_REGISTRATION=true
NEXT_PUBLIC_ENABLE_SOCIAL_LOGIN=false
NEXT_PUBLIC_ENABLE_DEMO_MODE=true

# CDN and Assets
NEXT_PUBLIC_CDN_URL=
NEXT_PUBLIC_ASSETS_URL=

# Analytics (Optional)
NEXT_PUBLIC_GA_TRACKING_ID=
NEXT_PUBLIC_HOTJAR_ID=

# Error Tracking (Optional)
NEXT_PUBLIC_SENTRY_DSN=

# File Upload
NEXT_PUBLIC_MAX_FILE_SIZE=10485760  # 10MB
NEXT_PUBLIC_ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf

# Maps (Optional)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=